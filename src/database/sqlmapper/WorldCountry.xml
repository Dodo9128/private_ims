<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fdreplay.ims.country.WorldCountry">
    <!--=======================================
    	목록 조회
     =======================================-->
	<sql id="listWorldCountryFromWhere">
		FROM 	world_country WC
		WHERE	1=1
	</sql>
	
	<select id="listWorldCountryCount" parameterType="Map" resultType="Integer">
		<include refid="CommonSQL.selectCount" />
		<include refid="listWorldCountryFromWhere" />
    </select>

    <select id="listWorldCountry" resultType="Map">
		<include refid="CommonSQL.pagingPreFix" />
		SELECT 	
			WC.id
			, WC.name
			, WC.iso3
			, WC.iso2
			, WC.phonecode
			, WC.capital
			, WC.currency
			, WC.natives
			, WC.flag
		<include refid="listWorldCountryFromWhere" />
		<include refid="CommonSQL.orderby" />
		<include refid="CommonSQL.pagingPostFix" />
    </select>
</mapper>